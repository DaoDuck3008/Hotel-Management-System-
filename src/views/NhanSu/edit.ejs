<!DOCTYPE html>
<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chỉnh Sửa Nhân Viên</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <style>
      .remove-image {
        position: absolute;
        top: 5px;
        right: 5px;
        background: rgba(220, 53, 69, 0.9);
        color: white;
        border: none;
        border-radius: 50%;
        width: 24px;
        height: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        font-size: 12px;
      }

      .image-preview {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
        gap: 1rem;
        margin-top: 1rem;
      }

      .preview-item {
        position: relative;
        border-radius: 8px;
        overflow: hidden;
        border: 1px solid #dee2e6;
      }

      .preview-item img {
        width: 100%;
        height: 120px;
        object-fit: cover;
      }

      .image-upload {
        border: 2px dashed #dee2e6;
        border-radius: 8px;
        padding: 2rem;
        text-align: center;
        transition: all 0.3s ease;
        cursor: pointer;
        background: #f8f9fa;
      }

      .image-upload:hover {
        border-color: #0d6efd;
        background: #e7f1ff;
      }
    </style>
  </head>
  <body>
    <div class="container my-5">
      <div class="card shadow-lg">
        <div class="card-header bg-dark text-white text-center py-3">
          <h2 class="mb-0">Sửa Nhân Viên</h2>
        </div>
        <div class="card-body p-4">
          <form action="/employees/update/<%= employee.MaNV %>" method="POST" enctype="multipart/form-data">
            <h4 class="mt-3 mb-3 border-bottom pb-2">Thông tin cá nhân</h4>
            <div class="row g-3">
              <div class="col-md-6">
                <label for="MaNV" class="form-label"
                  >Mã nhân viên <span class="text-danger">*</span></label
                >
                <input
                disabled
                  value=" <%= employee.MaNV %>"
                  type="text"
                  class="form-control"
                  id="MaNV"
                  name="MaNV"
                  required
                  maxlength="8"
                  placeholder="VD: NV001"
                />
                <div class="form-text">
                  Mã nhân viên phải là duy nhất và không trùng lặp.
                </div>
              </div>

              <div class="col-md-6">
                <label for="HoTen" class="form-label"
                  >Họ và tên <span class="text-danger">*</span></label
                >
                <input
                  value="<%= employee.HoTen %>"
                  type="text"
                  class="form-control"
                  id="HoTen"
                  name="HoTen"
                  required
                  maxlength="255"
                  placeholder="VD: Nguyễn Văn A"
                />
              </div>

              <div class="col-md-6">
                <label for="Email" class="form-label"
                  >Email <span class="text-danger">*</span></label
                >
                <input
                  value=" <%= employee.Email %>"
                  type="email"
                  class="form-control"
                  id="Email"
                  name="Email"
                  required
                  maxlength="100"
                  placeholder="VD: nva@company.com"
                />
              </div>

              <div class="col-md-6">
                <label for="SDT" class="form-label">Số điện thoại</label>
                <input
                  value="<%= employee.SDT %>"
                  type="tel"
                  class="form-control"
                  id="SDT"
                  name="SDT"
                  maxlength="10"
                  placeholder="VD: 0912345678"
                />
              </div>

              <div class="col-md-6">
                <label for="NgaySinh" class="form-label">Ngày sinh</label>
                <input
                  value="<%= new Date(employee.NgaySinh).toISOString().slice(0,10) %>"                  
                  type="date"
                  class="form-control"
                  id="NgaySinh"
                  name="NgaySinh"
                />
              </div>

              <div class="col-md-6">
                <label for="GioiTinh" class="form-label">Giới tính</label>
                <select id="GioiTinh" name="GioiTinh" class="form-select">
                  <option value="" >Chọn giới tính</option>
                  <option value="Nam" <%= employee.GioiTinh === "Nam" ? "selected": "" %>>Nam</option>
                  <option value="Nữ" <%= employee.GioiTinh === "Nữ" ? "selected": "" %> >Nữ</option>
                  <option value="Khác" <%= employee.GioiTinh === "Khác" ? "selected": "" %>>Khác</option>
                </select>
              </div>

              <div class="col-12">
                <label for="DiaChi" class="form-label">Địa chỉ</label>
                <input
                  value="<%= employee.DiaChi %>"
                  type="text"
                  class="form-control"
                  id="DiaChi"
                  name="DiaChi"
                  placeholder="VD: 123 Đường ABC, Quận 1, TP.HCM"
                />
              </div>
            </div>

            <h4 class="mt-4 mb-3 border-bottom pb-2">Thông tin công việc</h4>
            <div class="row g-3">
              <div class="col-md-6">
                <label for="Password" class="form-label"
                  >Password <span class="text-danger">*</span></label
                >
                <input
                  disabled
                  value="<%= employee.Password %>"
                  type="text"
                  class="form-control"
                  id="Password"
                  name="Password"
                />
              </div>

              <div class="col-md-6">
                <label for="PhongBan" class="form-label">Bộ phận</label>
                <select id="PhongBan" name="PhongBan" class="form-select">
                  <option value="" >Chọn bộ phận</option>
                  <option value="NhanSu" <%= employee.PhongBan === "NhanSu" ? "selected": "" %>>Nhân sự</option>
                  <option value="Phong" <%= employee.PhongBan === "Phong" ? "selected": "" %>>Phòng</option>
                  <option value="KinhDoanh" <%= employee.PhongBan === "KinhDoanh" ? "selected": "" %>>Kinh doanh</option>
                  <option value="LeTan" <%= employee.PhongBan === "LeTan" ? "selected": "" %>>Lễ tân</option>
                </select>
              </div>

              <div class="col-md-6">
                <label for="TrangThai" class="form-label"
                  >Trạng thái <span class="text-danger">*</span></label
                >
                <select
                  id="TrangThai"
                  name="TrangThai"
                  class="form-select"
                  required
                >
                  <option value="" selected>Chọn trạng thái</option>
                  <option value="Đang làm việc" <%= employee.TrangThai === "Đang làm việc" ? "selected": "" %>>Đang làm việc</option>
                  <option value="Đã nghỉ việc" <%= employee.TrangThai === "Đã nghỉ việc" ? "selected": "" %>>Đã nghỉ việc</option>
                </select>
              </div>

              <div class="col-md-6">
                <label for="NgayVaoLam" class="form-label">Ngày vào làm</label>
                <input
                  value="<%= new Date(employee.NgayVaoLam).toISOString().slice(0,10) %>"                  
                  type="date"
                  class="form-control"
                  id="NgayVaoLam"
                  name="NgayVaoLam"
                />
              </div>
            </div>

            <h4 class="mt-4 mb-3 border-bottom pb-2">Hình ảnh và tài liệu</h4>

            <div class="mb-3">
              <label for="ImgURL" class="form-label">Ảnh đại diện</label>
              <input
                type="file"
                class="d-none"
                id="imageInput"
                name="image"
                accept="image/*"
              />
              <div class="mt-3 p-4 border border-dashed text-center text-muted image-upload" id="imageUpload">
                Kéo thả ảnh vào đây hoặc nhấn để chọn
                <br />
                Hỗ trợ JPG, PNG, WEBP (Tối đa 5MB mỗi ảnh)
              </div>

              <div id="imagePreview" class="image-preview mt-3"></div>
            </div>

            <div class="d-flex justify-content-end pt-3">
              <button
                type="button"
                class="btn btn-secondary me-2"
                onclick="window.history.back()"
              >
                Hủy bỏ
              </button>
              <button type="submit" class="btn btn-primary">
                Sửa nhân viên
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script>
      const imageUpload = document.getElementById("imageUpload");
      const imageInput = document.getElementById("imageInput");
      const imagePreview = document.getElementById("imagePreview");
    
      // === 1) HIỂN THỊ ẢNH HIỆN TẠI KHI VÀO TRANG ===
      <% if (employee.ImgURL) { %>
        const currentItem = document.createElement("div");
        currentItem.classList.add("preview-item");
    
        currentItem.innerHTML = `
          <img src="<%= employee.ImgURL %>" alt="Current Image">
          <button type="button" class="remove-image">
            <i class="fas fa-times"></i>
          </button>
        `;
    
        // Cho phép người dùng xóa ảnh hiện tại
        currentItem.querySelector(".remove-image").addEventListener("click", () => {
          imagePreview.innerHTML = "";
          imageInput.value = "";
        });
    
        imagePreview.appendChild(currentItem);
      <% } %>
    
      // === 2) CLICK VÙNG UPLOAD → MỞ FILE ===
      imageUpload.addEventListener("click", () => {
        imageInput.click();
      });
    
      // === 3) KHI CHỌN ẢNH MỚI ===
      imageInput.addEventListener("change", () => {
        const file = imageInput.files[0];
        if (!file) return;
    
        const reader = new FileReader();
        reader.onload = (e) => {
          // Xóa ảnh preview cũ
          imagePreview.innerHTML = "";
    
          const item = document.createElement("div");
          item.classList.add("preview-item");
    
          item.innerHTML = `
            <img src="${e.target.result}" alt="New Image">
            <button type="button" class="remove-image">
              <i class="fas fa-times"></i>
            </button>
          `;
    
          item.querySelector(".remove-image").addEventListener("click", () => {
            imagePreview.innerHTML = "";
            imageInput.value = "";
          });
    
          imagePreview.appendChild(item);
        };
    
        reader.readAsDataURL(file);
      });
    </script>
    
  </body>
</html>
