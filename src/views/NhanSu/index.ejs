<!DOCTYPE html>
<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quản lý Nhân viên - Hotel MS</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
    />

    <style>
      /* Style cho Sidebar */
      .sidebar {
        min-height: 100vh;
        background-color: #343a40; /* Màu nền tối cho sidebar */
        position: fixed;
        top: 0;
        left: 0;
        z-index: 1000;
        color: white;
      }
      .sidebar-header .logo h1 {
        color: white !important;
      }
      .sidebar .nav-link:hover,
      .sidebar .nav-link.active {
        background-color: #495057; /* Màu hover cho menu */
        border-radius: 0.25rem;
      }
      .sidebar .nav-link {
        padding: 0.75rem 1rem;
      }
      /* Đảm bảo nội dung chính nằm bên phải sidebar */
      .main-content {
        margin-left: 17%; /* Điều chỉnh theo col-md-3/col-lg-2 (1/6 ~ 16.67%) */
        padding-top: 20px;
      }

      /* Màu sắc trạng thái */
      .badge-success {
        background-color: #d1e7dd;
        color: #0f5132;
      }
      .badge-danger {
        background-color: #f8d7da;
        color: #842029;
      }
    </style>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-3 col-lg-2 sidebar p-0" id="sidebar">
          <div class="sidebar-header p-3">
            <div class="logo d-flex align-items-center gap-3 mb-4">
              <i class="fas fa-hotel fa-2x text-white"></i>
              <h1 class="h5 text-white mb-0 fw-bold">Hotel MS</h1>
            </div>

            <ul class="nav flex-column">
              <li class="nav-item">
                <a
                  class="nav-link text-white d-flex justify-content-between align-items-center"
                  data-bs-toggle="collapse"
                  href="#roomSubmenu"
                  role="button"
                  aria-expanded="false"
                  aria-controls="roomSubmenu"
                >
                  <span> <i class="fas fa-bed me-2"></i> Bộ phận Phòng </span>

                  <i class="fas fa-chevron-down small"></i>
                </a>

                <div class="collapse ps-4" id="roomSubmenu">
                  <ul class="nav flex-column">
                    <li class="nav-item">
                      <a class="nav-link text-white" href="/rooms/statistics">
                        <i class="fas fa-chart-line me-2"></i>
                        Thống kê phòng
                      </a>
                    </li>

                    <li class="nav-item">
                      <a
                        class="nav-link text-white"
                        href="/rooms/price-settings"
                      >
                        <i class="fas fa-dollar-sign me-2"></i>
                        Điều chỉnh giá
                      </a>
                    </li>
                  </ul>
                </div>
              </li>

              <li class="nav-item">
                <a class="nav-link text-white" data-menu="business">
                  <i class="fas fa-briefcase me-2"></i>
                  <span>Bộ phận Kinh doanh</span>
                </a>
              </li>

              <li class="nav-item">
                <a
                  class="nav-link text-white d-flex justify-content-between align-items-center active"
                  data-bs-toggle="collapse"
                  href="#employeeSubmenu"
                  role="button"
                  aria-expanded="true"
                  aria-controls="employeeSubmenu"
                >
                  <span>
                    <i class="fas fa-users me-2"></i> Bộ phận Nhân Sự
                  </span>

                  <i class="fas fa-chevron-down small"></i>
                </a>

                <div class="collapse show ps-4" id="employeeSubmenu">
                  <ul class="nav flex-column">
                    <li class="nav-item">
                      <a
                        class="nav-link text-white"
                        href="/nhanvien/statistics"
                      >
                        <i class="fas fa-chart-line me-2"></i>
                        Thống kê nhân viên
                      </a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link text-white active" href="/employee">
                        <i class="fas fa-list me-2"></i>
                        Quản lý Nhân viên
                      </a>
                    </li>
                  </ul>
                </div>
              </li>

              <li class="nav-item">
                <a class="nav-link text-white" data-menu="receptions">
                  <i class="fas fa-user-circle me-2"></i>
                  <span>Bộ phận Lễ tân</span>
                </a>
              </li>
            </ul>
          </div>
        </div>

        <div class="col-md-9 col-lg-10 offset-md-3 offset-lg-2 main-content">
          <div
            class="d-flex justify-content-between align-items-center mb-4 p-3 bg-light rounded"
          >
            <h2 class="h3 mb-0 fw-bold">
              <a class="text-decoration-none" href="/employees"
                >Quản lý Nhân viên</a
              >
            </h2>
            <div class="d-flex align-items-center">
              <form action="/employees/search" method="GET">
                <input
                  name="searchData"
                  type="text"
                  class="form-control me-2"
                  placeholder="Tìm kiếm nhân viên..."
                />
                <button class="btn btn-primary" type="submit">Tìm kiếm</button>
              </form>
            </div>
          </div>

          <a href="/employees/create" class="btn btn-success mb-3">
            <i class="fas fa-plus me-2"></i>Thêm nhân viên mới
          </a>

          <div class="card shadow-sm">
            <div class="card-body p-0">
              <div class="table-responsive">
                <table class="table table-hover mb-0">
                  <thead class="table-dark">
                    <tr>
                      <th scope="col">Mã NV</th>
                      <th scope="col">Ảnh đại diện</th>
                      <th scope="col">Họ và tên</th>
                      <th scope="col">Ngày sinh</th>
                      <th scope="col">Giới tính</th>
                      <th scope="col">Phòng ban</th>
                      <th scope="col">Trạng thái</th>
                      <th scope="col">Thao tác</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if (typeof employees !== 'undefined' && employees.length
                    > 0) { %> <% employees.forEach(function(nhanvien) { %>
                    <tr>
                      <td><%= nhanvien.MaNV %></td>
                      <td>
                        <img
                          src="<%= nhanvien.ImgURL || '/images/default-avatar.png' %>"
                          alt="Avatar"
                          class="rounded-circle"
                          width="30"
                          height="30"
                        />
                      </td>
                      <td><%= nhanvien.HoTen %></td>
                      <td>
                        <%= new
                        Date(nhanvien.NgaySinh).toLocaleDateString('vi-VN') %>
                      </td>
                      <td>
                        <%= new
                        Date(nhanvien.NgayVaoLam).toLocaleDateString('vi-VN') %>
                      </td>
                      <td><%= nhanvien.PhongBan %></td>
                      <td>
                        <% if (nhanvien.TrangThai === 'Đang làm việc') { %>
                        <span class="badge badge-success">Đang làm việc</span>
                        <% } else if (nhanvien.TrangThai === 'Đã nghỉ việc') {
                        %>
                        <span class="badge badge-danger">Đã nghỉ việc</span>
                        <% } else { %>
                        <span class="badge bg-secondary"
                          ><%= nhanvien.TrangThai %></span
                        >
                        <% } %>
                      </td>
                      <td>
                        <a
                          href="/employees/<%= nhanvien.MaNV %>"
                          class="text-primary me-2"
                          >Xem</a
                        >
                        <a
                          href="/employees/edit/<%= nhanvien.MaNV %>"
                          class="text-warning me-2"
                          >Sửa</a
                        >
                        <a
                          href="/employees/delete/<%= nhanvien.MaNV %>"
                          class="text-danger"
                          >Xóa</a
                        >
                      </td>
                    </tr>
                    <% }); %> <% } else { %>
                    <tr>
                      <td colspan="8" class="text-center">
                        Không có nhân viên nào trong danh sách.
                      </td>
                    </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      // Ví dụ: Thiết lập trạng thái active cho menu khi trang được tải
      document.addEventListener("DOMContentLoaded", function () {
        const currentPath = window.location.pathname;
        const navLinks = document.querySelectorAll("#staffSubmenu .nav-link");
        navLinks.forEach((link) => {
          if (link.getAttribute("href") === currentPath) {
            link.classList.add("active");
          } else {
            link.classList.remove("active");
          }
        });
      });
    </script>
  </body>
</html>
