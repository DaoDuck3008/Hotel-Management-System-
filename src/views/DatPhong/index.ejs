<!DOCTYPE html>
<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quản lý Đơn Đặt Phòng - Hệ thống Khách sạn</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <style>
      .sidebar {
        background: linear-gradient(180deg, #2563eb 0%, #1d4ed8 100%);
        min-height: 100vh;
        transition: all 0.3s;
      }
      .sidebar.closed {
        margin-left: -260px;
      }
      .nav-link.active {
        background: #1e40af !important;
      }
      @media (max-width: 768px) {
        .sidebar {
          position: fixed;
          z-index: 1000;
          margin-left: 0;
        }
        .sidebar.closed {
          margin-left: -260px;
        }
      }
    </style>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 col-lg-2 sidebar p-0" id="sidebar">
          <div class="sidebar-header p-3">
            <div class="logo d-flex align-items-center gap-3 mb-4">
              <i class="fas fa-hotel fa-2x text-white"></i>
              <h1 class="h5 text-white mb-0 fw-bold">Hotel MS</h1>
            </div>
            <ul class="nav flex-column">
              <li class="nav-item">
                <a class="nav-link text-white active" data-menu="bookings">
                  <i class="fas fa-book me-2"></i> <span>Đơn Đặt Phòng</span>
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-white" data-menu="rooms">
                  <i class="fas fa-bed me-2"></i> <span>Quản lý Phòng</span>
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-white" data-menu="customers">
                  <i class="fas fa-users me-2"></i> <span>Khách hàng</span>
                </a>
              </li>
            </ul>
          </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-9 col-lg-10 ms-auto p-0">
          <header
            class="bg-white shadow-sm p-3 d-flex justify-content-between align-items-center"
          >
            <div class="d-flex align-items-center">
              <button class="btn btn-outline-secondary me-3" id="menuToggle">
                <i class="fas fa-bars"></i>
              </button>
              <h2 class="h4 mb-0 text-dark">Quản lý Đơn Đặt Phòng</h2>
            </div>
            <div class="d-flex align-items-center gap-3">
              <div class="input-group" style="width: 300px">
                <span class="input-group-text bg-white border-end-0">
                  <i class="fas fa-search text-muted"></i>
                </span>
                <input
                  type="text"
                  class="form-control border-start-0"
                  id="searchInput"
                  placeholder="Tìm kiếm khách hàng hoặc mã đơn..."
                />
              </div>
              <a href="/bookings/create" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i> Thêm đơn đặt phòng
              </a>
            </div>
          </header>

          <!-- Booking List -->
          <div class="content p-4">
            <% if (bookings && bookings.length > 0) { %>
            <table class="table table-bordered table-striped">
              <thead class="table-light">
                <tr>
                  <th>Mã đơn</th>
                  <th>Họ và tên</th>
                  <th>Ngày đặt</th>
                  <th>Ngày nhận</th>
                  <th>Ngày trả</th>
                  <th>Số lượng phòng đặt</th>
                  <th>Hành động</th>
                </tr>
              </thead>
              <tbody>
                <% bookings.forEach(function(booking) { const ngayDat =
                booking.NgayDat ? new Date(booking.NgayDat) : null; const
                ngayNhan = booking.NgayNhanPhong ? new
                Date(booking.NgayNhanPhong) : null; const ngayTra =
                booking.NgayTraPhong ? new Date(booking.NgayTraPhong) : null;
                const soLuongPhong = booking.ChiTiet ? booking.ChiTiet.length :
                0; %>
                <tr>
                  <td><%= booking.MaDatPhong %></td>
                  <td><%= booking.KhachHang?.HoVaTen || 'N/A' %></td>
                  <td>
                    <%= ngayDat ? ngayDat.toLocaleDateString('vi-VN') : 'N/A' %>
                  </td>
                  <td>
                    <%= ngayNhan ? ngayNhan.toLocaleDateString('vi-VN') : 'N/A'
                    %>
                  </td>
                  <td>
                    <%= ngayTra ? ngayTra.toLocaleDateString('vi-VN') : 'N/A' %>
                  </td>
                  <td><%= soLuongPhong %></td>
                  <td>
                    <a
                      href="/bookings/<%= booking.MaDatPhong %>"
                      class="btn btn-sm btn-outline-primary"
                    >
                      <i class="fas fa-eye me-1"></i> Xem
                    </a>
                    <a
                      href="/bookings/<%= booking.MaDatPhong %>/edit"
                      class="btn btn-sm btn-outline-success"
                    >
                      <i class="fas fa-edit me-1"></i> Sửa
                    </a>
                    <button type="button" class="btn btn-sm btn-outline-danger">
                      <i class="fas fa-trash me-1"></i> Xóa
                    </button>
                  </td>
                </tr>
                <% }); %>
              </tbody>
            </table>
            <% } else { %>
            <div class="text-center py-5" id="noResults">
              <i class="fas fa-book fa-4x text-muted mb-3"></i>
              <h3 class="text-muted">Không tìm thấy đơn đặt phòng</h3>
              <p class="text-muted">Thử tìm kiếm với từ khóa khác</p>
            </div>
            <% } %>
          </div>

          <!-- Modal xác nhận xóa -->
          <div class="modal fade" id="deleteModal" tabindex="-1">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title">Xác nhận xóa</h5>
                  <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                  ></button>
                </div>
                <div class="modal-body">
                  <p id="deleteMessage">
                    Bạn có chắc chắn muốn xóa đơn này không?
                  </p>
                </div>
                <div class="modal-footer">
                  <button
                    type="button"
                    class="btn btn-secondary"
                    data-bs-dismiss="modal"
                  >
                    Hủy
                  </button>
                  <button
                    type="button"
                    id="confirmDelete"
                    class="btn btn-danger"
                  >
                    Xóa
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- end Main Content -->
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        let currentBookingToDelete = null;

        function showDeleteModal(bookingId, customerName) {
          currentBookingToDelete = bookingId;
          document.getElementById(
            "deleteMessage"
          ).textContent = `Bạn có chắc chắn muốn xóa đơn của "${customerName}"? Hành động này không thể hoàn tác.`;
          const deleteModal = new bootstrap.Modal(
            document.getElementById("deleteModal")
          );
          deleteModal.show();
        }

        async function deleteBooking() {
          if (currentBookingToDelete) {
            const res = await fetch(`/bookings/${currentBookingToDelete}`, {
              method: "DELETE",
            });
            const data = await res.json();
            if (data.success) {
              alert(data.message);
              location.reload();
            } else {
              alert("Xóa thất bại!");
            }
          }
        }

        // Search trong bảng
        const searchInput = document.getElementById("searchInput");
        const rows = document.querySelectorAll("tbody tr");
        const noResults = document.getElementById("noResults");

        searchInput.addEventListener("input", function () {
          const searchTerm = this.value.toLowerCase();
          let visibleCount = 0;

          rows.forEach((row) => {
            const maDon = row
              .querySelector("td:nth-child(1)")
              .textContent.toLowerCase();
            const tenKhach = row
              .querySelector("td:nth-child(2)")
              .textContent.toLowerCase();

            if (maDon.includes(searchTerm) || tenKhach.includes(searchTerm)) {
              row.style.display = "";
              visibleCount++;
            } else {
              row.style.display = "none";
            }
          });

          if (noResults)
            noResults.style.display = visibleCount === 0 ? "block" : "none";
        });

        document
          .getElementById("confirmDelete")
          .addEventListener("click", deleteBooking);

        window.showDeleteModal = showDeleteModal; // expose cho onclick inline
      });
    </script>
  </body>
</html>
