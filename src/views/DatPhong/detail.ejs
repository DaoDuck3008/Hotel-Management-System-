<!DOCTYPE html>
<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chi tiết Đơn Đặt Phòng</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <style>
      .shadow-card {
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
      }
      .form-section {
        background: #f8f9fa;
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 20px;
      }
    </style>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 col-lg-2 bg-primary text-white p-3 min-vh-100">
          <h4 class="text-white mb-4">
            <i class="fas fa-hotel me-2"></i>Hotel MS
          </h4>
          <ul class="nav flex-column">
            <li class="nav-item mb-2">
              <a href="/bookings" class="text-white nav-link"
                ><i class="fas fa-book me-2"></i>Đơn Đặt Phòng</a
              >
            </li>
            <li class="nav-item mb-2">
              <a href="/rooms" class="text-white nav-link"
                ><i class="fas fa-bed me-2"></i>Quản lý Phòng</a
              >
            </li>
            <li class="nav-item mb-2">
              <a href="/customers" class="text-white nav-link"
                ><i class="fas fa-users me-2"></i>Khách hàng</a
              >
            </li>
          </ul>
        </div>

        <!-- Main content -->
        <div class="col-md-9 col-lg-10 p-4">
          <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Chi tiết đơn đặt phòng</h2>
            <a href="/bookings" class="btn btn-secondary"
              ><i class="fas fa-arrow-left me-1"></i> Quay lại</a
            >
          </div>

          <div class="shadow-card p-4 rounded">
            <!-- Thông tin khách hàng -->
            <div class="form-section mb-4">
              <h5 class="mb-3">
                <i class="fas fa-user me-2"></i>Thông tin khách hàng
              </h5>
              <div class="row mb-2">
                <div class="col-md-4">
                  <label class="fw-bold">Họ và tên</label>
                  <input
                    type="text"
                    class="form-control"
                    value="<%= booking.KhachHang.HoVaTen %>"
                    readonly
                  />
                </div>
                <div class="col-md-2">
                  <label class="fw-bold">Giới tính</label>
                  <input
                    type="text"
                    class="form-control"
                    value="<%= booking.KhachHang.GioiTinh %>"
                    readonly
                  />
                </div>
                <div class="col-md-3">
                  <label class="fw-bold">Ngày sinh</label>
                  <input
                    type="date"
                    class="form-control"
                    value="<%= booking.KhachHang.NgaySinh?.toISOString().slice(0,10) %>"
                    readonly
                  />
                </div>
                <div class="col-md-3">
                  <label class="fw-bold">SĐT</label>
                  <input
                    type="text"
                    class="form-control"
                    value="<%= booking.KhachHang.SDT %>"
                    readonly
                  />
                </div>
              </div>
              <div class="row">
                <div class="col-md-6">
                  <label class="fw-bold">Email</label>
                  <input
                    type="email"
                    class="form-control"
                    value="<%= booking.KhachHang.Email %>"
                    readonly
                  />
                </div>
              </div>
            </div>

            <!-- Thời gian đặt phòng -->
            <div class="form-section mb-4">
              <h5 class="mb-3">
                <i class="fas fa-calendar-alt me-2"></i>Thời gian đặt phòng
              </h5>
              <div class="row">
                <div class="col-md-4 mb-2">
                  <label class="fw-bold">Ngày đặt</label>
                  <input
                    type="date"
                    class="form-control"
                    value="<%= booking.NgayDat?.toISOString().slice(0,10) %>"
                    readonly
                  />
                </div>
                <div class="col-md-4 mb-2">
                  <label class="fw-bold">Ngày nhận</label>
                  <input
                    type="date"
                    class="form-control"
                    value="<%= booking.NgayNhanPhong?.toISOString().slice(0,10) %>"
                    readonly
                  />
                </div>
                <div class="col-md-4 mb-2">
                  <label class="fw-bold">Ngày trả</label>
                  <input
                    type="date"
                    class="form-control"
                    value="<%= booking.NgayTraPhong?.toISOString().slice(0,10) %>"
                    readonly
                  />
                </div>
              </div>
            </div>

            <!-- Chi tiết phòng -->
            <div class="form-section mb-4">
              <h5 class="mb-3">
                <i class="fas fa-door-open me-2"></i>Danh sách phòng
              </h5>
              <div id="roomDetails">
                <% booking.ChiTiet.forEach((detail, idx) => { %>
                <div
                  class="detail-item border rounded p-3 mb-3 bg-white shadow-sm"
                >
                  <div class="row">
                    <div class="col-md-3 mb-2">
                      <label class="fw-bold">Tên phòng</label>
                      <input
                        type="text"
                        class="form-control"
                        value="<%= detail.Phong.TenPhong %> - <%= detail.Phong.LoaiPhong.TenLoai %>"
                        readonly
                      />
                    </div>
                    <div class="col-md-2 mb-2">
                      <label class="fw-bold">Giá ngày</label>
                      <input
                        type="number"
                        class="form-control"
                        value="<%= detail.GiaNgay %>"
                        readonly
                      />
                    </div>
                    <div class="col-md-2 mb-2">
                      <label class="fw-bold">Giá giờ</label>
                      <input
                        type="number"
                        class="form-control"
                        value="<%= detail.GiaGio %>"
                        readonly
                      />
                    </div>
                  </div>
                </div>
                <% }) %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
