<!DOCTYPE html>
<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chi tiết Đơn Đặt Phòng</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />

    <style>
      .shadow-card {
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
      }
      .info-box {
        background: #f8f9fa;
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 20px;
      }
      .price-box {
        background: #ffffff;
        border: 1px solid #dee2e6;
        border-radius: 8px;
        padding: 12px;
        margin-bottom: 10px;
      }
      .price-item {
        padding: 6px 0;
        border-bottom: 1px solid #e9ecef;
      }
    </style>
  </head>

  <body>
    <div class="container-fluid">
      <div class="row">
        <!-- sidebar -->
        <%- include('../partials/sidebar.ejs') %>

        <!-- Main content -->
        <div class="col-md-9 col-lg-10 ms-auto p-4">
          <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Chi tiết đơn đặt phòng</h2>
            <a href="/bookings" class="btn btn-secondary">
              <i class="fas fa-arrow-left me-1"></i> Quay lại
            </a>
          </div>

          <div class="shadow-card p-4 rounded">
            <!-- THÔNG TIN KHÁCH HÀNG -->
            <div class="info-box">
              <h5 class="mb-3">
                <i class="fas fa-user me-2"></i>Thông tin khách hàng
              </h5>

              <div class="row mb-2">
                <div class="col-md-4">
                  <label class="fw-bold">Họ và tên</label>
                  <input
                    type="text"
                    class="form-control"
                    value="<%= booking.KhachHang.HoVaTen %>"
                    readonly
                  />
                </div>

                <div class="col-md-2">
                  <label class="fw-bold">Giới tính</label>
                  <input
                    type="text"
                    class="form-control"
                    value="<%= booking.KhachHang.GioiTinh %>"
                    readonly
                  />
                </div>

                <div class="col-md-3">
                  <label class="fw-bold">Ngày sinh</label>
                  <input
                    type="date"
                    class="form-control"
                    value="<%= new Date(booking.KhachHang.NgaySinh).toISOString().slice(0,10) %>"
                    readonly
                  />
                </div>

                <div class="col-md-3">
                  <label class="fw-bold">SĐT</label>
                  <input
                    type="text"
                    class="form-control"
                    value="<%= booking.KhachHang.SDT %>"
                    readonly
                  />
                </div>
              </div>

              <div class="row">
                <div class="col-md-6">
                  <label class="fw-bold">Email</label>
                  <input
                    type="text"
                    class="form-control"
                    value="<%= booking.KhachHang.Email %>"
                    readonly
                  />
                </div>
              </div>
            </div>

            <!-- THỜI GIAN ĐẶT PHÒNG -->
            <div class="info-box">
              <h5 class="mb-3">
                <i class="fas fa-calendar-alt me-2"></i>Thời gian đặt phòng
              </h5>

              <div class="row">
                <div class="col-md-4 mb-2">
                  <label class="fw-bold">Ngày đặt</label>
                  <input
                    type="date"
                    class="form-control"
                    value="<%= booking.DatPhong.NgayDat.toISOString().slice(0,10) %>"
                    readonly
                  />
                </div>

                <div class="col-md-4 mb-2">
                  <label class="fw-bold">Ngày nhận</label>
                  <input
                    type="date"
                    class="form-control"
                    value="<%= booking.DatPhong.NgayNhanPhong?.toISOString().slice(0,10) %>"
                    readonly
                  />
                </div>

                <div class="col-md-4 mb-2">
                  <label class="fw-bold">Ngày trả</label>
                  <input
                    type="date"
                    class="form-control"
                    value="<%= booking.DatPhong.NgayTraPhong?.toISOString().slice(0,10) %>"
                    readonly
                  />
                </div>
              </div>
            </div>

            <!-- DANH SÁCH PHÒNG -->
            <div class="info-box">
              <h5 class="mb-3">
                <i class="fas fa-door-open me-2"></i>Danh sách phòng
              </h5>

              <% booking.ChiTiet.forEach((room, idx) => { %>

              <div class="price-box">
                <!-- Tên phòng -->
                <h6 class="fw-bold mb-2">
                  <i class="fas fa-bed me-2"></i>
                  <%= room.Phong.TenPhong %> (<%=
                  room.Phong.LoaiPhong.TenLoaiPhong %>)
                </h6>

                <p class="mb-1">
                  <strong>Loại giá: </strong>
                  <%= room.ChiTietGiaDatPhong[0].LoaiGia %>
                </p>

                <!-- Bảng giá -->
                <div class="mt-2">
                  <h6>Giá theo từng ngày</h6>

                  <% room.ChiTietGiaDatPhong.forEach(price => { %>
                  <div class="price-item d-flex justify-content-between">
                    <span><%= price.Ngay %></span>
                    <span>
                      Ngày: <%= price.GiaNgay.toLocaleString() %> đ | Giờ: <%=
                      price.GiaGio.toLocaleString() %> đ
                    </span>
                  </div>
                  <% }) %>
                </div>
              </div>

              <% }) %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
